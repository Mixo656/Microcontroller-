#include <LPC214x.h>

#define MAXSIZE 10

int main() {
    unsigned int array[] = {10, 1, 3, 20, 1, 8};
    unsigned int i, j, num = 6, temp;
    int d;  // âœ… Declare delay variable here

    IO0DIR = 0xFFFFFFFF;  // Set all PORT0 pins as output

    // Bubble Sort
    for (i = 0; i < num; i++) {
        for (j = 0; j < num - 1 - i; j++) {
            if (array[j] > array[j + 1]) {
                temp = array[j];
                array[j] = array[j + 1];
                array[j + 1] = temp;
            }
        }
    }

    // Output sorted values on GPIO
    for (i = 0; i < num; i++) {
        IO0CLR = 0xFFFFFFFF;
        IO0SET = array[i];

        for (d = 0; d < 100000; d++);  // Delay loop
    }

    return 0;
}
