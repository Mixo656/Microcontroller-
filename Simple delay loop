#include <LPC214x.h>  // Header for LPC214x series

void delay() {
    volatile int d;
    for (d = 0; d < 500000; d++);  // 
}

int main() {
    int i = 0, val = 1, n = 5;

    IODIR0 = 0xFFFFFFFF; // Set all Port 0 pins as output

    if (n > 0) {
        for (i = 1; i <= n; i++) {
            val = i;           // Use current value of i
            IOSET0 = val;      // Set bits on P0 (you can use IOCLR0 to clear if needed)
            delay();           // Delay for visibility
            IOCLR0 = 0xFFFFFFFF; // Clear all bits after delay
        }
    }

    IOSET0 = val;  // Final output
    while (1);     // Infinite loop
}
